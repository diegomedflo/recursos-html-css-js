//MUESTRA PREGUNTAS DE ACUERDO A SELECT
$(document).ready(function() {
    $('.down-list').on('change',function(){
        var SelectValue='.'+$(this).val();
        $('.hiden').hide();
        $(SelectValue).toggle();
    });
});
